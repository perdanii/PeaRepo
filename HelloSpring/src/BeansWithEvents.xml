<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <bean id = "helloWorld" class = "com.pea.event.handler.HelloWorld">
      <property name = "message" value = "Hello World!"/>
   </bean>
   <bean id = "cStartEventHandler" class = "com.pea.event.handler.CStartEventHandler"/>
   <bean id = "cStopEventHandler" class = "com.pea.event.handler.CStopEventHandler"/>
   
   <bean id = "customEventHandler" class = "com.pea.event.custom.CustomEventHandler"/>
   <bean id = "customEventPublisher" class = "com.pea.event.custom.CustomEventPublisher"/>
   

</beans>